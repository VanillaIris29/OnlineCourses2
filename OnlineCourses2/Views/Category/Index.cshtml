@model List<OnlineCourses2.Models.Category>

@{
    ViewData["Title"] = "Категории";
}

<main style="max-width: 800px; margin: 40px auto; padding: 0 20px;">

    <h2 style="margin-bottom: 25px;">Категории</h2>

    <div style="margin-bottom: 20px; text-align:right;">
        <a asp-action="Create" asp-controller="Category"
           style="background-color:#81d8b0; color:white; padding:10px 20px;
                  border-radius:6px; text-decoration:none;">
            Създай категория
        </a>
    </div>

    @if (Model.Count == 0)
    {
        <p>Няма създадени категории.</p>
    }
    else
    {
        <table style="width:100%; border-collapse:collapse;">
            <thead>
                <tr style="background:#f5f5f5;">
                    <th style="padding:10px; text-align:left;">Име</th>
                    <th style="padding:10px; text-align:right;">Действия</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var cat in Model)
                {
                    <tr>
                        <td style="padding:10px;">@cat.Name</td>
                        <td style="padding:10px; text-align:right;">
                            <form method="post" asp-action="Delete" asp-route-id="@cat.Id"
                                  onsubmit="return confirm('Сигурни ли сте?');"
                                  style="display:inline;">
                                <button type="submit"
                                        style="background:#e74c3c; color:white; border:none;
                                                       padding:6px 12px; border-radius:4px; cursor:pointer;">
                                    Изтрий
                                </button>
                            </form>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
</main>

