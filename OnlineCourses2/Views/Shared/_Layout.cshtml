<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - OnlineCourses2</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/OnlineCourses2.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">
</head>
<body>
    <div class="header-main-container">
        <header class="container">
            <nav class="custom-navbar">
                <a class="brand-logo" asp-controller="Course" asp-action="All">OnlineCourses</a>

                @if (User.IsInRole("Admin"))
                {
                    <div class="nav-links d-none d-md-flex">

                        <div class="nav-item">
                            <a asp-controller="Course" asp-action="All">Курсове</a>
                        </div>
                        <div class="nav-item">
                            <a asp-controller="Course" asp-action="ManageAll">Всички курсове</a>
                        </div>

                        <div class="nav-item">
                            <a asp-controller="Category" asp-action="Create">Категории</a>
                        </div>

                        <div class="nav-item dropdown">
                            <a class="dropdown-toggle" href="#" id="adminDropdown" role="button"
                               data-bs-toggle="dropdown" data-bs-display="static" aria-expanded="false">
                                Админ панел
                            </a>

                            <ul class="dropdown-menu" aria-labelledby="adminDropdown">
                                <li><a class="dropdown-item" asp-controller="Admin" asp-action="Organizers">Организатори</a></li>
                                <li><a class="dropdown-item" asp-controller="Admin" asp-action="Users">Потребители</a></li>
                            </ul>
                        </div>

                    </div>
                }
                @if (User.IsInRole("Organizer"))
                {
                    <div class="nav-links d-none d-md-flex">
                        <a asp-controller="Course" asp-action="All">Курсове</a>
                        <a asp-controller="Course" asp-action="Manage">Моите курсове</a>
                    </div>
                   

                }
                @if (User.IsInRole("User"))
                {
                    <div class="nav-links d-none d-md-flex">
                        <a asp-controller="UserCourses" asp-action="All">Курсове</a>
                        <a asp-controller="UserCourses" asp-action="MyCourses">Моите курсове</a>
                    </div>
                }
             
                <div class="auth-box">
                    <partial name="_LoginPartial" />
                </div>
            </nav>
        </header>
        <div class="header-diagonal"></div>
    </div>

    <div class="container content-wrapper">
        @RenderBody()
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2026 - OnlineCourses<a asp-area=""></a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
