<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - OnlineCourses2</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/OnlineCourses2.styles.css" asp-append-version="true" />
</head>
<body>
    <div class="header-main-container">
        <header class="container">
            <nav class="custom-navbar">
                <a class="brand-logo" asp-controller="Home" asp-action="Index">OnlineCourses</a>

                <div class="nav-links d-none d-md-flex">
                    <a asp-controller="Course" asp-action="All">Курсове</a>
                    <a asp-controller="Course" asp-action="Manage">Моите курсове</a>
                    <a asp-controller="Category" asp-action="Create">Категории</a>
                </div>

                <div class="auth-box">
                    <partial name="_LoginPartial" />
                </div>
            </nav>
        </header>
        <div class="header-diagonal"></div>
    </div>

    <div class="container content-wrapper">
        @RenderBody()
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2026 - OnlineCourses2 - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
