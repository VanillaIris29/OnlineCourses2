@model List<OnlineCourses2.Models.Course>

@{
    ViewData["Title"] = "Моите курсове";
}

<main style="max-width: 1100px; margin: 40px auto; padding: 0 20px;">

    <!-- Search + Filter -->
    <div style="display: flex; gap: 15px; margin-bottom: 25px;">
        <input type="text" placeholder="Търсене..."
               style="flex: 1; padding: 12px; border: 1px solid #ddd; border-radius: 6px;" />

        <select style="padding: 12px; border: 1px solid #ddd; border-radius: 6px; width: 220px;">
            <option value="">Всички категории</option>
            @* По-късно ще ги заредим динамично *@
        </select>
    </div>

    <!-- Buttons Row -->
    <div style="display: flex; justify-content: flex-end; gap: 10px; margin-bottom: 25px;">

        <!-- Create Course -->
        <a asp-controller="Course" asp-action="Create"
           style="background-color: #81d8b0; color: white; padding: 10px 20px;
                  border-radius: 6px; text-decoration: none; font-weight: 500;">
            Създай курс
        </a>

        <!-- Edit (disabled for now) -->
        <button disabled
                style="background-color: #f0f0f0; color: #aaa; padding: 10px 20px;
                       border-radius: 6px; border: none; font-weight: 500;">
            Редактирай
        </button>

        <!-- Delete (disabled for now) -->
        <button disabled
                style="background-color: #f0f0f0; color: #aaa; padding: 10px 20px;
                       border-radius: 6px; border: none; font-weight: 500;">
            Изтрий
        </button>
    </div>

    <h3 style="text-align: left; margin-bottom: 20px;">Създадени курсове</h3>

    @if (Model == null || Model.Count == 0)
    {
        <p style="color: #555; text-align: center; margin-top: 40px;">
            Все още няма създадени курсове.
        </p>
    }
    else
    {
        <div class="course-grid">
            @foreach (var course in Model)
            {
                <div class="course-card" style="cursor: pointer;">
                    <div class="grey-box"></div>

                    <div class="course-info">
                        <h4>@course.Title</h4>
                        <p>Категория: @course.Category?.Name</p>
                        <p>Цена: @course.Price лв.</p>
                    </div>
                </div>
            }
        </div>
    }

</main>
